<resources>
    <!-- Base application theme. -->
    <style name="PlannerApp.Theme.Main" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorWater</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorWater</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorWater</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorWater</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/mBottomSheetDialogDayNight</item>
        <item name="materialAlertDialogTheme">@style/mMaterialAlertDialog.Rounded</item>
        <item name="android:fontFamily">@font/plannerapp_font_family_en_ru</item>

    </style>


    <style name="PlannerApp.Theme.Friends" parent="PlannerApp.Theme.Main">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorFire</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorFire</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorFire</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorFire</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

    </style>

    <style name="PlannerApp.Theme.Profile" parent="PlannerApp.Theme.Main">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorTree</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorTree</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorTree</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorTree</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="PlannerApp.Theme.Task_and_Settings" parent="PlannerApp.Theme.Main">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorAir</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorAir</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorAir</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorAir</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
    </style>
</resources>