<resources>
    <!-- Base application theme. -->
    <style name="PlannerApp.Theme.Main" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColorWater</item>
        <item name="colorPrimaryVariant">@color/secondaryDarkColorWater</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorWater</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorWater</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/mBottomSheetDialogDayNight</item>
        <item name="materialAlertDialogTheme">@style/mMaterialAlertDialog.Rounded</item>
        <item name="android:fontFamily">@font/plannerapp_font_family_en_ru</item>


        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>