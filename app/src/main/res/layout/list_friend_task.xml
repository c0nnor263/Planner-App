<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout_list_friend_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="3dp">

    <CheckBox
        android:id="@+id/check_friend_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:buttonTint="@color/primaryLightColorTree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true"/>

    <TextView
        android:id="@+id/name_friend_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:text="@string/add_task"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/check_friend_task"
        app:layout_constraintStart_toEndOf="@+id/check_friend_task"
        app:layout_constraintTop_toTopOf="@+id/check_friend_task" />


</androidx.constraintlayout.widget.ConstraintLayout>