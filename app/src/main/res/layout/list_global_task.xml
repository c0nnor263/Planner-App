<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="task"
            type="com.conboi.plannerapp.data.model.TaskType" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/parent_layout_list_global_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="3dp"
        android:transitionName="@{@string/task_transition_name(task.idTask)}">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/global_check_task"
            android:layout_width="32dp"
            android:enabled="false"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:buttonTint="@color/primaryLightColorTree"
            android:checked="@{task.checked}"
            android:minWidth="0dp"
            android:minHeight="0dp"
            tools:checked="true" />

        <TextView
            android:id="@+id/global_title_task"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="@{task.title}"
            android:textSize="16sp"
            tools:text="@string/add_task" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>